{% extends 'layout.html.twig' %}

{% block content %}
	<section>
		<div class="container">
			<h2 class="form-title">Connexion</h2>
			<form action="{{ url('/createurs/login') }}" method="POST" class="login-form">
				<label for="email">Email :</label>
				<input type="email" id="email" name="email" required>

				<label for="password">Mot de passe :</label>
				<input type="password" id="password" name="password" required>

				{% if error %}
					<span class="text-danger">&#10008; Identifiant ou mot de passe incorrect</span>
				{% endif %}

				<button type="submit" class="submit-button">Se connecter</button>
				<p class="register-text">Pas encore de compte ?
					<a href="{{ url('/createurs/register') }}">Inscrivez-vous</a>
				</p>
				<p class="register-text">Admin ?
					<a href="{{ url('/admin/login') }}">Connexion admin</a>
				</p>
			</form>
		</div>
	</section>


</div>{% endblock %}
